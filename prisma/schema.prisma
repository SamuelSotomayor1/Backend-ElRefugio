generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Reservation {
  id        Int      @id @default(autoincrement())
  rut       String   @unique
  firstName String
  lastName  String
  phone     String
  date      DateTime // d√≠a + fecha
  time      String   // HH:mm (puede usarse string para simplicidad)
  createdAt DateTime @default(now())
}